bg-color = #fff
small-size = 50px
large-size = 150px
radius-distance = 200px

body
  padding 0
  margin 0

.lane
  width 100%
  height 50vh
  border-top 1px solid #fff
  position relative

.ball
  background bg-color
  border-radius 100%
  position absolute
  top 50%
  transform translateX(radius-distance)

  &.small
    height small-size
    width small-size
    margin-top -(small-size / 2)

  &.large
    height large-size
    width large-size
    margin-top -(large-size / 2)

  &:not(.center)
    for i in (2..7)
      &:nth-child({i})
        transform translate3d(sin(60deg * (i - 1)) * radius-distance + (radius-distance / 2), cos(60deg * (i - 1)) * radius-distance, 0)

